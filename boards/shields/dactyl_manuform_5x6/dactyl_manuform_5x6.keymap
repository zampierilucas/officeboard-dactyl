#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

/ {
    macros {
        // Macro to clear all BT bonds (takes 1 param but ignores it, for hold-tap compatibility)
        bt_clr_all: bt_clr_all {
            compatible = "zmk,behavior-macro-one-param";
            #binding-cells = <1>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings = <&bt BT_CLR_ALL>;
        };
        // No-op macro (takes 1 param but ignores it, for hold-tap compatibility)
        none_macro: none_macro {
            compatible = "zmk,behavior-macro-one-param";
            #binding-cells = <1>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings = <&none>;
        };
    };

    behaviors {
        // Hold for 5 seconds to clear all BT bonds - prevents accidental triggers
        bt_clr_hold: bt_clr_hold {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "hold-preferred";
            tapping-term-ms = <5000>;
            bindings = <&bt_clr_all>, <&none_macro>;
        };

        // Tap 5 times to clear all BT bonds - for left-half-only access
        bt_clr_tap5: bt_clr_tap5 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <300>;
            bindings = <&none>, <&none>, <&none>, <&none>, <&bt BT_CLR_ALL>;
        };
    };

    conditional_layers {
        compatible = "zmk,conditional-layers";
        tri_layer {
            if-layers = <1 2>;
            then-layer = <3>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        base {
            display-name = "Base";
            // -----------------------------------------------------------------------------------------
            // |  ESC |  1  |  2  |  3  |  4  |  5  |            |  6  |  7  |  8  |  9  |  0  | BSPC |
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |            |  Y  |  U  |  I  |  O  |  P  |  -   |
            // | SHFT |  A  |  S  |  D  |  F  |  G  |            |  H  |  J  |  K  |  L  |  ;  |  á   |
            // | CTRL |  Z  |  X  |  C  |  V  |  B  |            |  N  |  M  |  ,  |  .  |  /  |  \   |
            //                    |  [  |  ]  |                              |  +  |  =  |
            //                          | LEFT| SPC |            |ENTER|RIGHT|
            //                          |LGUI | DEL |            |PGUP |PGDN |
            //                          |BSPC |LALT |            |HOME | END |

            bindings = <
            &kp ESC   &kp N1   &kp N2   &kp N3    &kp N4    &kp N5                          &kp N6    &kp N7    &kp N8     &kp N9   &kp N0    &kp BSPC
            &kp TAB   &kp Q    &kp W    &kp E     &kp R     &kp T                           &kp Y     &kp U     &kp I      &kp O    &kp P     &kp MINUS
            &kp LSHFT &kp A    &kp S    &kp D     &kp F     &kp G                           &kp H     &kp J     &kp K      &kp L    &kp SEMI  &kp RA(SQT)
            &kp LCTRL &kp Z    &kp X    &kp C     &kp V     &kp B                           &kp N     &kp M     &kp COMMA  &kp DOT  &kp FSLH  &kp BSLH
                                        &kp LBKT  &kp RBKT                                            &kp PLUS  &kp EQUAL
                                                  &mo 2     &kp SPACE                                 &kp ENTER &mo 1
                                                  &kp LGUI  &kp DEL                                   &kp PG_UP &kp PG_DN
                                                  &kp BSPC  &kp LALT                                  &kp HOME  &kp END
            >;
        };

        right {
            display-name = "Right";
            // -----------------------------------------------------------------------------------------
            // |  `   |     |     |     |     |     |            | F20 | F21 |     |     |     | DEL  |
            // |      |     |     |     |     |     |            |     |     |  UP |     |     |  +   |
            // |      |     |     |     |     |     |            |     | LFT | DWN | RGT |  -  |  '   |
            // |      |     |     |     |     |     |            |BOOT |     |     |     |  =  |  _   |
            //                    |     |  ç  |                              |     |     |
            //                          |PSCR |     |            |     |     |
            //                          |     |     |            |     |     |
            //                          |     |     |            |     |     |

            bindings = <
            &kp GRAVE  &trans    &trans    &trans    &trans    &trans                          &kp F20         &kp F21   &trans     &trans     &trans    &kp DEL
            &trans     &trans    &trans    &trans    &trans    &trans                          &trans          &trans    &kp UP     &trans     &trans    &kp PLUS
            &trans     &trans    &trans    &trans    &trans    &trans                          &trans          &kp LEFT  &kp DOWN   &kp RIGHT  &kp MINUS &kp SQT
            &trans     &trans    &trans    &trans    &trans    &trans                          &bootloader     &trans    &trans     &trans     &kp EQUAL &kp UNDER
                                           &trans    &kp RA(COMMA)                                                       &trans     &trans
                                                     &kp PSCRN &trans                                 &trans       &trans
                                                     &trans    &trans                                 &trans       &trans
                                                     &trans    &trans                                 &trans       &trans
            >;
        };

        left {
            display-name = "Left";
            // -----------------------------------------------------------------------------------------
            // |  `   | F1  | F2  | F3  | F4  | F5  |            | F6  | F7  | F8  | F9  | F10 | F11  |
            // |      |     |     |  UP |     |     |            |     |     |     |     | F12 |VOL_UP|
            // |      |     | LFT | DWN | RGT |     |            |     |PREV |PLAY |NEXT |     |VOL_DN|
            // |      |BTCLR*|    |     |     |BOOT |            |BOOT |     |     |     |  ñ  |      |
            //                    |  {  |  }  |                              |  `  |  ~  |
            //                          |     |     |            |     |     |
            //                          |     |     |            |     |     |
            //                          |     |MUTE |            |MUTE |     |
            // *BTCLR = BT Clear All (tap Z 5 times with left thumb while holding LEFT layer)

            bindings = <
            &kp GRAVE  &kp F1 &kp F2   &kp F3   &kp F4    &kp F5                      &kp F6      &kp F7     &kp F8    &kp F9     &kp F10       &kp F11
            &trans     &trans &trans   &kp UP   &trans    &trans                      &trans     &trans    &trans     &trans   &kp F12  &kp C_VOL_UP
            &trans     &trans &kp LEFT &kp DOWN &kp RIGHT &trans                      &trans      &kp C_PREV &kp C_PP  &kp C_NEXT &trans        &kp C_VOL_DN
            &trans     &bt_clr_tap5 &trans   &trans   &trans    &bootloader                 &bootloader &trans     &trans    &trans     &kp RA(COMMA) &trans
                                                &kp LBRC  &kp RBRC                                            &kp GRAVE  &kp TILDE
                                                         &trans      &trans                      &trans       &trans
                                                         &trans      &trans                      &trans       &trans
                                                         &trans      &kp C_MUTE                  &kp C_MUTE   &trans
            >;
        };

        adjust {
            display-name = "Adjust";
            // -----------------------------------------------------------------------------------------
            // Activated when both LEFT and RIGHT layers are held simultaneously
            // |BT_CLR| BT1  | BT2  | BT3  | BT4  | BT5  |            |     |     |     |     |     |      |
            // |      |      |      |      |      |BTNXT |            |     |     |     |     |     |      |
            // |OUTTOG|      |      |      |      |BTPRV |            |     |     |     |     |     |      |
            // |      |      |      |      |      |BOOT  |            |BOOT |     |     |     |     |      |
            //                      |      |      |                              |     |     |
            //                            |      |      |            |     |     |
            //                            |      |      |            |     |     |
            //                            |      |      |            |     |     |

            bindings = <
            &bt BT_CLR    &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4                &trans       &trans  &trans  &trans  &trans  &trans
            &trans        &trans        &trans        &trans        &trans        &bt BT_NXT                  &trans       &trans  &trans  &trans  &trans  &trans
            &out OUT_TOG  &trans        &trans        &trans        &trans        &bt BT_PRV                  &trans       &trans  &trans  &trans  &trans  &trans
            &trans        &trans        &trans        &trans        &trans        &bootloader                 &bootloader  &trans  &trans  &trans  &trans  &trans
                                                      &trans        &trans                                                 &trans  &trans
                                                                    &trans        &trans                      &trans       &trans
                                                                    &trans        &trans                      &trans       &trans
                                                                    &trans        &trans                      &trans       &trans
            >;
        };
    };
};
